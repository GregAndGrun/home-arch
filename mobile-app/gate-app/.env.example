# Smart Home App - Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to the repository!

# ESP32 Gateway IP Addresses
# Replace with your actual ESP32 IP addresses on your local network
GATE_ENTRANCE_IP=192.168.1.100
GATE_GARAGE_IP=192.168.0.103

# API Configuration
# Timeout for API requests in milliseconds (default: 10000 = 10 seconds)
API_TIMEOUT=10000

# Retry Configuration
# Number of retry attempts for failed API calls (default: 3)
API_RETRY_ATTEMPTS=3
# Delay between retries in milliseconds (default: 1000 = 1 second)
API_RETRY_DELAY=1000

# Security Settings
# Token refresh threshold in seconds (default: 300 = 5 minutes)
# Token will be refreshed this many seconds before expiration
TOKEN_REFRESH_THRESHOLD=300

# VPN Configuration
# Name of WireGuard tunnel to activate automatically
# Must match exactly the tunnel name in your WireGuard app
# Default: "Home"
WIREGUARD_TUNNEL_NAME=Home
